/* pages/user/user.wxss */
.user {
  background-color: #eee;
}
.list-item {
  padding:10px 15px;
  border:1px solid #eee;
  margin-top:-1px;
  background-color: #fff;
}
.header-img {
  width: 100%;
  height: 200px;
}
.list-item .list-img {
  width: 25px;
  height: 25px;
  display: inline-block;
  vertical-align: middle;
}
.list-name {
  font-size:14px;
  margin-top:2px;
  margin-left:15px;
  display: inline-block;
  color: #555;
}
.arrow {
  font-size: 20px;
  float: right;
  display: inline-block;
  color: #555;
}
.arrow .phone {
  font-size: 14px;
}
#address {
  margin-top: 15px;
}
#customer {
  margin-top: 15px;
}