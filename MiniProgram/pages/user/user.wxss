/* pages/user/user.wxss */

.user {
  background-color: #eee;
  min-height: 100vh;
}

.header-img {
  width: 100%;
  height: 200px;
}

.list-item .list-img {
  width: 25px;
  height: 25px;
  display: inline-block;
  vertical-align: middle;
}

.list-name {
  font-size: 14px;
  margin-top: 2px;
  margin-left: 15px;
  display: inline-block;
  color: #555;
}

.arrow {
  font-size: 20px;
  float: right;
  display: inline-block;
  color: #555;
}

.arrow .phone {
  font-size: 14px;
}

#address {
  margin-top: 15px;
}

#customer {
  margin-top: 15px;
}

.profile-area {
  text-align: center;
  margin-top:-150px;
  margin-bottom:30px;
}
.profile-img {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}