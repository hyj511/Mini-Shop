<!--pages/pendingOrder/pendingOrder.wxml-->
<view class="pending-item">
  <view class="commodity-item">
    <view class="commodity-image">
      <image src="../../images/commodity-1.png"></image>
    </view>
    <view class="commodity-info">
      <view class="commodity-description">
        奶油味夏威夷果 奶油口味特产干货干果 坚果零食小吃袋装
      </view>
      <view class="price">
        <view class="left">×1</view>
        <view class="right">¥69.00</view>
      </view>
      <view class="remain">
        <view class="left">
          <button class="button appbutton3">50G</button>
        </view>
        <view class="right">
          <view class="groupBuying" hidden="{{groupBuyingHidden}}">拼团</view>
        </view>
      </view>
    </view>
  </view>
  <view class="mode-area">
    <view class="left">
      配送方式
    </view>
    <view class="right">
      <button class="button appbutton4 {{deliveryActive}}" bindtap="selectDelivery">快递配送</button>
      <button class="button appbutton4 {{storeActive}}" bindtap="selectStore">门店自提</button>
    </view>
  </view>
  <view class="address-area">
    <view class="left">
      <view class="name">收货人:
        <text style="margin-left: 10px">王小萌</text>
        <text style="margin-left: 10px">15126489546</text>
      </view>
      <view class="address">北京市 朝阳区 10021</view>
      <view class="store">朝阳区 北京工业大学东门</view>
    </view>
    <view class="right">
      <button class="button appbutton3" bindtap="editAddress">编辑</button>
    </view>
  </view>
  <view class="detail-area">
    <view class="item">
      <view class="left">
        买家留言:
      </view>
      <view class="right">
      
      </view>
    </view>
    <view class="item" hidden="{{storeHidden}}">
      <view class="left">
        快递运费:
      </view>
      <view class="right">
        ¥0.00
      </view>
    </view>
    <view class="item">
      <view class="left">
        价格合计:
      </view>
      <view class="right">
        <text style="color:#db5078">¥69.00</text>
      </view>
    </view>
    <view class="item">
      <view class="left">
        支付方式:
      </view>
      <view class="right">
        微信支付
      </view>
    </view>
  </view>
  <view class="button-area">
    <view class="total">总计: ¥69.00</view>
    <button class="button appbutton2" bindtap="submitOrder">
        提交订单
    </button>
  </view>
</view>