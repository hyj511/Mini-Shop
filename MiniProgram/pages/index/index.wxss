/**index.wxss**/
.logo-area {
  text-align: center;
}
#logo-img {
  width:200px;
  height:80px;
}
swiper.swiper {
  height: 250px;
}
.swiper-img {
  width: 100%;
  height: 250px;
}
.button-item {
  display: inline-block;
}
.scroll-view_H{
    white-space: nowrap;
    width: 100%;
    background-color: #eee;
    padding-bottom: 3px;
}
.scroll-view-item_H{
    display: inline-block;
}
button.scroll-button {
  border-radius:0px;
  margin:0px 1px;
  padding:5px 25px;
}
button.scroll-button::after {
  border: none;
}
.product-item {
  border-bottom:1px solid #eee;
}
.product-image {
  display: inline-block;
  vertical-align: top
}
.product-image image {
  width:100px;
  height:100px;
  margin:10px;
}
.product-info{
  display: inline-block;
  max-width: calc(100% - 120px);
}
.product-description {
  font-size:15px;
  padding:15px 20px 0px 0px;
  min-height:55px;
}
.product-price text{
  font-size: 14px;
  display: inline-block;
  font-weight: 600;
}
text.price1 {
  margin-right: 10px;
  color: #68bc5e;
}
text.price2 {
  margin-right: 10px;
  color: #db5078;
}
text.go-detail {
  color:#68bc5e;
  position:relative;
  float:right;
  margin-top:17.5px;
  margin-right:10px;
}
