/* pages/productDetail/productDetail.wxss */

.productDetail {
  padding-bottom: 60px;
}

swiper.swiper {
  height: 300px;
}

.swiper-img {
  width: 100%;
  height: 300px;
}

.commodity-area {
  padding: 10px;
}

.commodity-info {
  font-size: 15px;
  color: #555;
}

.prices {
  margin-top: 10px;
}

text.price1 {
  margin-right: 10px;
  color: #db5078;
  font-size: 16px;
  font-weight: 600;
}

text.price2 {
  margin-right: 10px;
  color: #68bc5e;
  font-size: 14px;
}

.info-area {
  padding: 10px;
  font-size: 14px;
}

.info-area .item {
  border-top: 1px solid #eee;
  padding: 10px 0px;
}

image.question {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

.group-area {
  border-top: 10px solid #eee;
}

.left.rule {
  display: block;
}

.user-area {
  padding: 10px;
}

.user-item {
  padding: 5px;
  border-top: 1px solid #eee;
}

.user-image {
  display: inline-block;
  width: 50px;
  vertical-align: middle;
}

.user-image image {
  width: 50px;
  height: 50px;
}

.user-info {
  display: inline-block;
  width: calc(100% - 60px);
  font-size: 14px;
  vertical-align: middle;
  padding-left: 10px;
}

.user-description {
  display: inline-block;
}

.gobutton {
  display: inline-block;
  float: right;
}

.user-info .info {
  margin-top: 5px;
  color: #aaa;
}

.detail-area {
  border-top: 10px solid #eee;
}

.title {
  font-size: 16px;
  padding: 10px;
}

.title .content {
  padding: 5px 0px;
  border-bottom: 2px solid #eee;
}

.thumb image {
  width: 100%;
  height: 300px;
}

.button-area {
  bottom: -5px;
  position: fixed;
  width: 100%;
}

.commoditySheet {
  padding: 10px 0px;
}

.commoditySheet .price .price1 {
  display: inline-block;
}

.commoditySheet button.appbutton2 {
  line-height: 20px;
  padding: 0px 10px;
  margin-left: 5px;
  display: inline-block;
  border-radius: 2px;
}

.commoditySheet .buttons {
  padding: 10px 0px;
  border-bottom: 1px solid #eee;
}

.commoditySheet .buttons button.appbutton2 {
  margin: 10px 5px;
}

.commoditySheet .product-description {
  min-height: 50px;
  padding-top: 0px;
}

.commoditySheet .remain {
  font-size: 12px;
  color: #aaa;
  margin-top: 5px;
}

.commoditySheet .close {
  display: inline-block;
  position: absolute;
  right: 10px;
  top: 0px;
}

.commoditySheet .control {
  padding: 10px;
  font-size: 14px;
  border-bottom: 1px solid #eee;
  margin-bottom: 20px;
}

.commoditySheet .control button.appbutton2 {
  margin-left: 1px;
  background-color: #ddd;
  color: #000;
}

.commoditySheet button.large.appbutton2 {
  border-radius: 0px;
  margin: 0px;
  display: block;
  line-height: 50px;
  margin-bottom: -10px;
}
