/* pages/productDetail/productDetail.wxss */
swiper.swiper {
  height: 300px;
}
.swiper-img {
  width: 100%;
  height: 300px;
}
.commodity-area {
  padding: 10px;
}
.commodity-info {
  font-size: 15px;
  color: #555;
}
.prices{
  margin-top: 10px;
}
text.price1 {
  margin-right: 10px;
  color: #db5078;
  font-size: 16px;
  font-weight: 600;
}
text.price2 {
  margin-right: 10px;
  color: #68bc5e;
  font-size: 14px;
}
.left {
  display: inline-block;
}
.right {
  display: inline-block;
  float: right;
}
.info-area {
  padding: 10px;
  font-size: 14px;
}
.info-area .item{
  border-top: 1px solid #eee;
  padding: 10px 0px;
}
image.question {
  width:20px;
  height:20px;
  margin-right:10px;
}
.group-area {
  border-top: 10px solid #eee;
}
.left.rule {
  display: block;
}
.user-area {
  padding: 10px 
}
.user-item {
  padding: 5px;
  border-top: 1px solid #eee;
}
.user-image {
  display:inline-block;
  width:50px;
  vertical-align: middle;
}
.user-image image {
  width: 50px;
  height: 50px;
}
.user-info {
  display:inline-block;
  width:calc(100% - 60px);
  font-size:14px;
  vertical-align:middle;
  padding-left:10px;
}
.user-description{
  display: inline-block;
}
.gobutton{
  display: inline-block;
  float: right;
}
.user-info .info {
  margin-top: 5px;
  color: #aaa;
}
button.appbutton3 {
  background-color:#ffffff;
  font-size:14px;
  border:1px solid #68bc5e;
  color:#68bc5e;
  line-height:30px;
  margin-top:5px;
}
.detail-area {
  border-top: 10px solid #eee;
}
.title {
  font-size: 16px;
  padding: 10px;
}
.title .content {
  padding: 5px 0px;
  border-bottom: 2px solid #eee;
}
.thumb image {
  width: 100%;
  height: 300px;
}
button.appbutton1 {
  color: #68bc5e;
  background-color: white;
}
button.appbutton2 {
  color: white;
  background-color: #68bc5e;
}
.button-area{
  bottom: -5px;
  position: fixed;
  width: 100%;
}
.sub-button {
  display: inline-block;
  width: 50%;
}
button.button{
  border-radius: 0px;
  font-size: 14px;
  padding: 10px;
}
button::after {
  border-radius: 0px;
}
button.appbutton1:hover {
  color: white;
  background-color: #83d27a;
}
button.appbutton2:hover {
  color: white;
  background-color: #83d27a;
}